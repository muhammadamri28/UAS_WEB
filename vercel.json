{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ],
    "env": {
      "MYSQLCLIENT_CFLAGS": "-I/usr/include/mysql",
      "MYSQLCLIENT_LDFLAGS": "-L/usr/lib/mysql -lmysqlclient",
      "FLASK_ENV": "production",
      "FLASK_APP": "app.py",
      "SECRET_KEY": "your_secret_key",
      "DATABASE_URL": "mysql://username:password@hostname:port/database"
    },
    "build": {
      "env": {
        "MYSQLCLIENT_CFLAGS": "-I/usr/include/mysql",
        "MYSQLCLIENT_LDFLAGS": "-L/usr/lib/mysql -lmysqlclient"
      }
    }
  }
  